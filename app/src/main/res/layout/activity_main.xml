<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.dby.game.MainActivity">
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="100dp"
       android:orientation="horizontal">
         <TextView
             android:id="@+id/tv_target_score"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:background="@color/card2048"
             android:text="@string/app_name"
             android:textStyle="bold"
             android:gravity="center"
             android:textSize="36sp"
             android:layout_margin="5dp"
             android:textColor="@android:color/white"
             android:layout_weight="1"/>
       <TextView
           android:id="@+id/tv_goal_score"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:background="@color/card0"
           android:text="得分\n\n1111"
           android:textStyle="bold"
           android:gravity="center"
           android:textSize="20sp"
           android:layout_margin="5dp"
           android:textColor="@color/card64"
           android:layout_weight="1"/>
       <TextView
           android:id="@+id/tv_height_score"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:background="@color/card0"
           android:text="最高得分\n\n1111"
           android:textStyle="bold"
           android:gravity="center"
           android:textSize="20sp"
           android:layout_margin="5dp"
           android:textColor="@color/colorAccent"
           android:layout_weight="1"/>

   </LinearLayout>

    <com.dby.game.GameView
    android:id="@+id/game_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/bt_score_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:text="分数排行榜"
            android:textColor="@android:color/white"/>
        <ImageButton
            android:id="@+id/bt_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/kryptanium_setting_btn_icon"/>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/bt_Restart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_green_light"
            android:text="重新开始"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</LinearLayout>
