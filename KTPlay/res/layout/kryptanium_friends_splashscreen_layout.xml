<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >



    <TextView
        android:id="@id/kt_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/kt_tip_addfriends_now"
        style="@style/kryptanium_title"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@id/kt_content"
        android:layout_below="@id/kt_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/kt_tip_addfrinds_from_different_types"
        style="@style/kryptanium_primary_text"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/kryptanium_friend_splashscreen_addfriend_text"
        android:layout_below="@id/kt_content"
        android:layout_gravity="center"
        style="@style/kryptanium_button_style_main"
        android:gravity="center"
        android:text="@string/kt_add_friends"
        android:layout_marginTop="45dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
