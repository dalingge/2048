<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="17.5dp"
    android:paddingRight="17.5dp" >
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_marginRight="17.5dp"
    android:layout_marginLeft="17.5dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="17.5dp"
        android:text="@string/kt_security_verification_prompt"
        style="@style/kryptanium_primary_text_light"
        />

    <GridView
        android:id="@+id/kryptanium_secure_authentication_gridview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17.5dp"
        android:columnWidth="40dp"
        android:gravity="center_horizontal"
        android:horizontalSpacing="10dp"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp" />

    <TextView
        android:id="@+id/kryptanium_secure_authentication_ok"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginTop="17.5dp"
        android:layout_marginBottom="10dp"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/kt_confirm"
        style="@style/kryptanium_button_style_main"
        />
</LinearLayout>
</LinearLayout>
