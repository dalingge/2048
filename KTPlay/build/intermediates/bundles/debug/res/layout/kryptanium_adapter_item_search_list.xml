<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      style="@style/kryptanium_list_item"
	  android:orientation="horizontal"
	  
	  >
	  <ImageView 
	      android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:gravity="left|center"
		  android:layout_gravity="left|center"
		  android:layout_marginLeft="0dp"
		  android:src="@drawable/kryptanium_icon_recent"
	      />
  		<TextView 
  		    android:id="@+id/kryptanium_search_list_subtext"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	        android:textSize="@dimen/kryptanium_text_size_big"
	        android:gravity="left|center"
	        android:maxLines="2"
			android:ellipsize="end"     
	        android:layout_gravity="left|center"
	        android:layout_marginLeft="8dp"
			style="@style/kryptanium_primary_text"
		    />
</LinearLayout>
