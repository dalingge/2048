<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/kryptanium_chat_expression_layout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ktplay.support.v4.view.ViewPager
        android:id="@+id/kryptanium_input_emoji_vp_contains"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="wrap_content" />

    <!-- 指针 -->

    <com.ktplay.widget.PageIndicator
        android:id="@+id/kryptanium_input_emoji_dot"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="5dp" />

</LinearLayout>