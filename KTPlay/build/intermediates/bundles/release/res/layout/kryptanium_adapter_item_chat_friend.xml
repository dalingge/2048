<?xml version="1.0" encoding="utf-8"?>
    <!-- 列表项 - 发起聊天 - 选择好友 -->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        style="@style/kryptanium_list_item"
        >

        <include layout="@layout/kt_item_avatar"/>

         <ImageView
            android:id="@+id/kryptanium_chat_friend_info_genderImage"
         android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:background="@null"
        android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/kryptanium_chat_friend_info_nickname"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/kryptanium_user_login_edit_height"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:singleLine="true"
            style="@style/kryptanium_primary_text_light"
             />
    </LinearLayout>
