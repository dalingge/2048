<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/kryptanium_popup_bg"
    android:paddingBottom="@dimen/kt_dateselector_paddingbottom"
    >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_gravity="center_horizontal"
        >

        <ListView
            android:id="@id/kryptanium_datepicker_year"
        android:layout_width="60dp"
        android:layout_height="fill_parent"/>
        <ListView
            android:id="@id/kryptanium_datepicker_month"
            android:layout_width="60dp"
            android:layout_height="fill_parent"/>
        <ListView
            android:id="@id/kryptanium_datepicker_day"
            android:layout_width="60dp"
            android:layout_height="fill_parent"/>
    </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#ffafafaf"
            android:layout_marginTop="90dp"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#ffafafaf"
            android:layout_marginTop="120dp"/>
    </FrameLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#7fafafaf"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/kt_dateselector_action_height"
        android:layout_gravity="center_horizontal"
        >

        <TextView
            android:id="@id/kryptanium_datepicker_confirm"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/kt_confirm"
            android:layout_weight="1"
            android:textColor="@color/kt_theme_color"
            android:gravity="center"
            />

        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="#7fafafaf"/>

        <TextView
            android:id="@id/kryptanium_datepicker_cancel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/kt_cancel"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/kt_secondary_text_default_material_light"
            />

    </LinearLayout>
</LinearLayout>