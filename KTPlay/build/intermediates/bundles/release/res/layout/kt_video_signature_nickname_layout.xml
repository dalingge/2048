<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    >

    <FrameLayout
        android:id="@+id/kt_create_topic_video_signature_frame"
        android:layout_width="120dp"
        android:layout_height="42dp"

        >
		<!-- 昵称区域 -->
        <ImageView
            android:id="@+id/kt_create_topic_video_signature_nickname_bg"
            android:layout_width="107dp"
            android:layout_height="42dp"
            android:scaleType="fitXY" 
            android:layout_marginLeft="13dp"
            />
		<!-- 头像区域 -->
        <com.ktplay.widget.KTMaskableImageView
            android:id="@+id/kt_create_topic_video_signature_avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY" 
            android:layout_marginTop="6dp"
            />

        <ImageView
            android:id="@+id/kt_create_topic_video_signature_avatar_fg"
            android:layout_width="30dp"
            android:layout_height="30dp" 
            android:scaleType="fitXY"
            android:layout_marginTop="6dp"
            />
    </FrameLayout>

</RelativeLayout>